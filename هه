    <script>
        // متغيرات عامة
        let cartItems = [];
        let currentPage = 'home';
        
        // تهيئة الصفحة عند التحميل
        document.addEventListener('DOMContentLoaded', function() {
            initializePage();
            setupEventListeners();
        });
        
        // تهيئة الصفحة
        function initializePage() {
            // تحميل محتويات السلة من التخزين المحلي
            loadCartFromStorage();
            updateCartCount();
            
            // إظهار الصفحة الرئيسية افتراضياً
            showPage('home');
        }
        
        // إعداد مستمعي الأحداث
        function setupEventListeners() {
            // البحث
            const searchInput = document.querySelector('.search-box input');
            const searchButton = document.querySelector('.search-box button');
            
            if (searchInput && searchButton) {
                searchButton.addEventListener('click', performSearch);
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        performSearch();
                    }
                });
            }
            
            // أزرار إضافة إلى السلة
            const addToCartButtons = document.querySelectorAll('.add-to-cart');
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const productCard = this.closest('.product-card');
                    addToCart(productCard);
                });
            });
            
            // أزرار تفاصيل المنتج
            const viewDetailsButtons = document.querySelectorAll('.view-details');
            viewDetailsButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const productCard = this.closest('.product-card');
                    viewProductDetails(productCard);
                });
            });
            
            // أيقونة السلة
            const cartIcon = document.querySelector('.cart-icon');
            if (cartIcon) {
                cartIcon.addEventListener('click', function() {
                    showNotification('سيتم فتح صفحة السلة في التحديثات القادمة');
                });
            }
            
            // نموذج الاتصال
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    submitContactForm();
                });
            }
        }
        
        // تحميل السلة من التخزين المحلي
        function loadCartFromStorage() {
            const storedCart = localStorage.getItem('mahmoudCart');
            if (storedCart) {
                cartItems = JSON.parse(storedCart);
            }
        }
        
        // حفظ السلة في التخزين المحلي
        function saveCartToStorage() {
            localStorage.setItem('mahmoudCart', JSON.stringify(cartItems));
        }
        
        // تحديث عدد العناصر في السلة
        function updateCartCount() {
            const cartCount = document.querySelector('.cart-count');
            if (cartCount) {
                cartCount.textContent = cartItems.length;
            }
        }
        
        // إضافة منتج إلى السلة
        function addToCart(productCard) {
            const productName = productCard.querySelector('h3').textContent;
            const productPrice = productCard.querySelector('.product-price').textContent;
            
            // استخراج السعر الرقمي
            const priceMatch = productPrice.match(/([\d,]+)/);
            const price = priceMatch ? parseInt(priceMatch[1].replace(/,/g, '')) : 0;
            
            // إضافة المنتج إلى السلة
            cartItems.push({
                name: productName,
                price: price
            });
            
            // حفظ وتحديث السلة
            saveCartToStorage();
            updateCartCount();
            
            // عرض رسالة تأكيد
            showNotification(`تم إضافة "${productName}" إلى السلة`);
        }
        
        // عرض تفاصيل المنتج
        function viewProductDetails(productCard) {
            const productName = productCard.querySelector('h3').textContent;
            const productDescription = productCard.querySelector('p').textContent;
            const productPrice = productCard.querySelector('.product-price').textContent;
            
            alert(`تفاصيل المنتج:\n\n${productName}\n\n${productDescription}\n\nالسعر: ${productPrice}`);
        }
        
        // تنفيذ البحث
        function performSearch() {
            const searchInput = document.querySelector('.search-box input');
            const searchTerm = searchInput.value.trim();
            
            if (searchTerm) {
                showNotification(`سيتم البحث عن: "${searchTerm}" في التحديثات القادمة`);
            } else {
                showNotification('يرجى إدخال مصطلح البحث');
            }
        }
        
        // إرسال نموذج الاتصال
        function submitContactForm() {
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            
            // في التطبيق الحقيقي، سيتم إرسال البيانات إلى الخادم
            showNotification(`شكراً ${name}، تم استلام رسالتك وسنقوم بالرد عليك قريباً`);
            
            // إعادة تعيين النموذج
            document.getElementById('contactForm').reset();
        }
        
        // عرض إشعار
        function showNotification(message) {
            // إنشاء عنصر الإشعار
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.textContent = message;
            
            // إضافة الأنماط
            notification.style.cssText = `
                position: fixed;
                top: 100px;
                right: 20px;
                background: linear-gradient(45deg, var(--secondary), var(--accent));
                color: var(--dark);
                padding: 15px 25px;
                border-radius: 8px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
                z-index: 10000;
                font-weight: 600;
                transform: translateX(150%);
                transition: transform 0.5s ease;
            `;
            
            // إضافة الإشعار إلى الصفحة
            document.body.appendChild(notification);
            
            // عرض الإشعار
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            // إخفاء الإشعار بعد 3 ثوان
            setTimeout(() => {
                notification.style.transform = 'translateX(150%)';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 500);
            }, 3000);
        }
        
        // عرض صفحة محددة
        function showPage(pageId) {
            // إخفاء جميع الصفحات
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // إزالة النشاط من جميع روابط التنقل
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            // إضافة النشاط للرابط المحدد
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.textContent.trim() === getPageTitle(pageId)) {
                    link.classList.add('active');
                }
            });
            
            // إظهار الصفحة المطلوبة
            document.getElementById(pageId).classList.add('active');
            currentPage = pageId;
            
            // التمرير إلى أعلى الصفحة
            window.scrollTo(0, 0);
        }
        
        // الحصول على عنوان الصفحة من معرفها
        function getPageTitle(pageId) {
            const titles = {
                'home': 'الرئيسية',
                'categories': 'الفئات',
                'gallery': 'المعرض',
                'orders': 'الطلبات',
                'contact': 'اتصل بنا',
                'dashboard': 'لوحة التحكم'
            };
            
            return titles[pageId] || 'الرئيسية';
        }
        
        // إضافة أنماط إضافية لقائمة المنتجات في لوحة التحكم
        document.addEventListener('DOMContentLoaded', function() {
            const style = document.createElement('style');
            style.textContent = `
                .products-list {
                    display: flex;
                    flex-direction: column;
                    gap: 15px;
                }
                
                .product-item {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 15px;
                    background: #f9f9f9;
                    border-radius: 8px;
                }
                
                .product-info h4 {
                    margin: 0 0 5px;
                    color: var(--primary);
                }
                
                .product-info p {
                    margin: 0;
                    color: #666;
                    font-size: 14px;
                }
                
                .product-price {
                    font-weight: 700;
                    color: var(--secondary);
                }
                
                .category-stats {
                    margin-top: 15px;
                    padding-top: 10px;
                    border-top: 1px solid #eee;
                    color: #666;
                    font-size: 14px;
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>
